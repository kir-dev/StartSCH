<category-list categories="[@(string.Join(',', Categories.Select(c => c.Id)))]" expanded="@Expanded">
    @* SEO, not visible if JS is enabled *@
    <ul>
        @foreach (var page in Categories.Select(c => c.Page).Distinct())
        {
            <li>
                <a href="/pages/@(page.Id)">@(page.GetName())</a>
            </li>
        }
    </ul>
</category-list>

@code {
    [Parameter, EditorRequired] public required List<Category> Categories { get; set; }
    [Parameter] public bool Expanded { get; set; }
}
